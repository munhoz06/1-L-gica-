<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Jogo da Memória</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f2f2f2;
            text-align: center;
            margin: 0;
            padding: 20px;
        }

        h1 {
            margin-bottom: 20px;
        }

        #game {
            width: 420px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(3, 130px);
            gap: 15px;
        }

        .card {
            width: 130px;
            height: 130px;
            background: #333;
            border-radius: 10px;
            cursor: pointer;
            position: relative;
            transform-style: preserve-3d;
            transition: transform 0.4s;
        }

        .card.flip {
            transform: rotateY(180deg);
        }

        .face {
            width: 100%;
            height: 100%;
            border-radius: 10px;
            position: absolute;
            backface-visibility: hidden;
        }

        .front {
            background: #444;
        }

        .back {
            transform: rotateY(180deg);
            background-size: cover;
            background-position: center;
        }
    </style>
</head>
<body>

<h1>Jogo da Memória</h1>
<div id="game"></div>

<script>
    // Lista de imagens (cada uma aparece duas vezes)
    const images = [
        "img/img1.png",
        "img/img1.png",
        "img/img2.png",
        "img/img2.png",
        "img/img3.png",
        "img/img3.png"
    ];

    // Embaralhar as cartas
    images.sort(() => Math.random() - 0.5);

    const game = document.getElementById("game");
    let firstCard = null;
    let lock = false;

    // Criar as cartas
    images.forEach(src => {
        const card = document.createElement("div");
        card.classList.add("card");

        card.innerHTML = `
            <div class="face front"></div>
            <div class="face back" style="background-image: url('${src}')"></div>
        `;

        card.addEventListener("click", () => {
            if (lock || card.classList.contains("flip")) return;

            card.classList.add("flip");

            if (!firstCard) {
                firstCard = card;
            } else {
                const firstImg = firstCard.querySelector(".back").style.backgroundImage;
                const secondImg = card.querySelector(".back").style.backgroundImage;

                if (firstImg !== secondImg) {
                    lock = true;
                    setTimeout(() => {
                        firstCard.classList.remove("flip");
                        card.classList.remove("flip");
                        lock = false;
                    }, 800);
                }

                firstCard = null;
            }
        });

        game.appendChild(card);
    });
</script>

</body>
</html>

